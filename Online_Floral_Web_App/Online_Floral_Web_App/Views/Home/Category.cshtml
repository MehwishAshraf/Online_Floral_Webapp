
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.cate</h2>


<div class="container row" style="box-sizing:border-box">
   @for (int i = 0; i<6 ; i++)
   {
        string imgpath = "~/Images/" + ViewBag.cate+"/" + (i+1) + ".jpg";

      <div class="col-md-4" style="margin-top:5px;">
         
          <a href="#"><img src="@Url.Content(imgpath)" style="width:100%; height:350px;" /></a>
          
       </div>
   }


</div>
